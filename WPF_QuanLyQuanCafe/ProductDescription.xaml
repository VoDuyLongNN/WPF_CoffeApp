<Window x:Class="WPF_QuanLyQuanCafe.ProductDescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_QuanLyQuanCafe"
        mc:Ignorable="d"
        Icon="Asset\titleIcon.png"
        Title="Gọi Nước" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#E8C07D" FontFamily="Jetbrains Mono" ResizeMode="NoResize">
    <StackPanel>
        <Image Width="200" Height="250" Margin="0 20 0 0" x:Name="imgDesc"/>
        <TextBlock x:Name="NameDesc" TextAlignment="Center" FontSize="20"
                   Foreground="#066163"/>
        <TextBlock x:Name="priceDesc" TextAlignment="Center" FontSize="15"
                   Margin="0 10 0 0"/>
        <Button Width="150" Height="50" Margin="0 20 0 0"
                Background="Transparent" BorderBrush="#8E3200" BorderThickness="2"
                Cursor="Hand" Click="Button_Click">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Thêm" VerticalAlignment="Center" Padding="0 0 10 0"
                           FontSize="20"/>
                <Image Source="Images/AddIcon.png" Width="35" Height="35"/>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
